<Page
    x:Class="ThiUWP_23102018.Views.DemoAppbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ThiUWP_23102018.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    
        <StackPanel Background="Azure" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Height="100">
<AppBarButton Margin="20,20,0,20" Icon="Clock" Label="Clock" ></AppBarButton>
            <StackPanel Width="850"></StackPanel>
                <AppBarButton x:ConnectionId='2'                       Width="100" Icon="SlideShow" Label="View Gallery" Margin="20,20,20,20"></AppBarButton>
                <AppBarButton Width="100" Label="Help" Icon="Help" Margin="20,20,50,20" ></AppBarButton>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Height="900">
                <TextBlock Margin="200,100,0,0" Text="Demo AppBar" FontSize="100"></TextBlock>
            </StackPanel>
        </StackPanel>


</Page>

